    <host	id="server1"	speed="100Mf"/>
    <host	id="server2"	speed="100Mf"/>
    <host	id="server3"	speed="100Mf"/>

    <host id="middleserver" speed="1000000Mf"/>

    <host	id="cliente0"	speed="10Mf"/>
